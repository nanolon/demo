{
  "name": "hello-world-highlighter",
  "displayName": "Hello World Highlighter",
  "description": "Syntax-Highlighting for Hello World and Hallo Welt in Text files",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.102.0"
  },
  "categories": [
    "Other",
    "Language Packs"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "demo.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "helloWorldHighlighter.showInfo",
        "title": "Hello World Info"
      }
    ],
    "languages": [
      {
        "id": "hello-text",
        "aliases": ["Hello Text", "hello-text"],
        "extensions": [".txt"],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "hello-text",
        "scopeName": "source.hello-text",
        "path": "./syntaxes/hello-text.tmGrammar.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile && yarn run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.102.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "eslint": "^9.25.1",
    "typescript": "^5.8.3",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}