{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Hello Text",
  "scopeName": "source.hello-text",
  "patterns": [
    {
      "include": "#hello-world-en"
    },
    {
      "include": "#hello-world-de"
    }
  ],
  "repository": {
    "hello-world-en": {
      "patterns": [
        {
          "name": "keyword.control.hello",
          "match": "(?i)\\b(hello)\\s+(world)\\b",
          "captures": {
            "1": {
              "name": "keyword.control.hello.greeting"
            },
            "2": {
              "name": "keyword.control.hello.target"
            }
          }
        }
      ]
    },
    "hello-world-de": {
      "patterns": [
        {
          "name": "keyword.control.hello",
          "match": "(?i)\\b(hallo)\\s+(welt)\\b",
          "captures": {
            "1": {
              "name": "keyword.control.hello.greeting"
            },
            "2": {
              "name": "keyword.control.hello.target"
            }
          }
        }
      ]
    }
  }
}